<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:elevation="10dp"
	android:gravity="center"
	android:orientation="vertical">

	<FrameLayout
		android:id="@+id/mokaAdViewContainer"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ProgressBar
		android:id="@+id/loadingAd"
		android:layout_width="16dp"
		android:layout_height="16dp"
		app:layout_constraintBottom_toBottomOf="@+id/mokaAdViewContainer"
		app:layout_constraintLeft_toLeftOf="@+id/mokaAdViewContainer"
		app:layout_constraintRight_toRightOf="@+id/mokaAdViewContainer"
		app:layout_constraintTop_toTopOf="@+id/mokaAdViewContainer" />

	<TextView
		android:id="@+id/textView_temp1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:gravity="left"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:text="TestTestTestTestTestTest"
		android:textColor="@color/black_04"
		android:textSize="13dp"
		android:textStyle="bold"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/mokaAdViewContainer" />

	<TextView
		android:id="@+id/textView_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="0dp"
		android:gravity="left"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:text="testtesttesttesttest"
		android:textColor="@color/black_06"
		android:textSize="11dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView_temp1" />

</androidx.constraintlayout.widget.ConstraintLayout>
